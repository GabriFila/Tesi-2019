{
  "name": "prism-touch-bar-express",
  "version": "1.0.0",
  "description": "An express-based api to control prism microscope",
  "main": "server.js",
  "scripts": {
    "start": "tsc && npm run prepare-browser && node ./ts-dist/server.js",
    "prepare-browser": "browserify ts-dist/src/UI/mainUI.js -o public/codeBehind/mainUI.js",
    "prepare-exe": "pkg package.json --targets node10-linux-armv7 --out-path prod"
  },
  "author": "Gabriele Filaferro",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.16.1",
    "@types/serialport": "^7.0.3",
    "express": "4.16.4",
    "pkg": "^4.4.0",
    "serialport": "7.1.5"
  },
  "devDependencies": {
    "browserify": "16.2.3",
    "typescript": "3.4.5"
  },
  "pkg": {
    "scripts": [
      "./ts-dist/server.js"
    ],
    "assets": [
      "./public/**/*",
      "./ts-dist/toFromPrism.js"
    ]
  },
  "bin": "./ts-dist/server.js"
}
