{
  "name": "prism-touch-bar-express",
  "version": "1.0.0",
  "description": "An express-based api to control prism microscope",
  "main": "server.js",
  "scripts": {
    "start": "npm run prep && node ./ts-dist/server.js",
    "prod": "npm run prep && node ./ts-dist/server.js prod",
    "prep": "tsc && npm run prepare-mainUI && npm run prepare-connectUI",
    "prepare-mainUI": "browserify ts-dist/UI/mainUI.js -o public/codeBehind/mainUI.js",
    "prepare-connectUI": "browserify ts-dist/UI/waitConnectUI.js -o public/codeBehind/waitConnectUI.js",
    "prep-raspi": "pkg package.json --targets node10-linux-armv7 --out-path prod"
  },
  "author": "Gabriele Filaferro",
  "license": "MIT",
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/serialport": "^7.0.3",
    "dotenv": "^8.0.0",
    "express": "4.16.4",
    "node-observer": "^0.4.4",
    "pkg": "^4.4.0",
    "serialport": "7.1.5"
  },
  "devDependencies": {
    "browserify": "16.2.3",
    "typescript": "3.4.5"
  },
  "pkg": {
    "scripts": "./ts-dist/server.js",
    "assets": [
      "./public/**/*",
      "./ts-dist/*"
    ]
  },
  "bin": "./ts-dist/server.js"
}
